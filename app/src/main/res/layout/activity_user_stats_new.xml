<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserStatsActivity">


    <android.support.constraint.Guideline
        android:id="@+id/vertical_middle_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical_middle_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />


    <TextView
        android:id="@+id/profile_text_app_title"
        style="@style/TextLargeTitle"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/horizontal_margin"
        android:text="INSTAGRAM DEMO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/profile_button_logout"
        style="@style/CustomButton"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/outlined_button"
        android:text="logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profile_divider_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:layout_marginStart="@dimen/vertical_margin"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_button_logout"
        app:srcCompat="@color/colorGreyLight" />

    <ImageView
        android:id="@+id/profile_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/short_margin"
        app:layout_constraintEnd_toStartOf="@+id/vertical_middle_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_divider_1"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/profile_text_nick_name"
        style="@style/TextLargeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/short_margin"
        android:text="nick name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_imageView"
        app:layout_constraintTop_toBottomOf="@+id/profile_divider_1" />

    <TextView
        android:id="@+id/profile_text_post_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ProfileTextValue"
        android:text="55"
        android:layout_marginTop="@dimen/short_margin"
        app:layout_constraintEnd_toEndOf="@+id/profile_text_post_label"
        app:layout_constraintStart_toStartOf="@+id/profile_text_post_label"
        app:layout_constraintTop_toBottomOf="@+id/profile_text_nick_name" />

    <TextView
        android:id="@+id/profile_text_post_label"
        style="@style/ProfileTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/short_margin"
        android:text="post label"
        app:layout_constraintStart_toEndOf="@+id/profile_imageView"
        app:layout_constraintTop_toBottomOf="@+id/profile_text_post_value" />

    <TextView
        android:id="@+id/profile_text_follows_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ProfileTextValue"
        android:text="777"
        app:layout_constraintEnd_toEndOf="@+id/profile_text_follows_label"
        app:layout_constraintStart_toStartOf="@+id/profile_text_follows_label"
        app:layout_constraintTop_toTopOf="@+id/profile_text_post_value" />

    <TextView
        android:id="@+id/profile_text_follows_label"
        style="@style/ProfileTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/short_margin"
        android:text="follows"
        app:layout_constraintEnd_toStartOf="@+id/profile_text_followBy_label"
        app:layout_constraintStart_toEndOf="@+id/profile_text_post_label"
        app:layout_constraintTop_toBottomOf="@+id/profile_text_follows_value" />

    <TextView
        android:id="@+id/profile_text_followBy_label"
        style="@style/ProfileTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/short_margin"
        android:text="follow by"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_text_followBy_value" />

    <TextView
        android:id="@+id/profile_text_followBy_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ProfileTextValue"
        android:text="99999"
        app:layout_constraintEnd_toEndOf="@+id/profile_text_followBy_label"
        app:layout_constraintStart_toStartOf="@+id/profile_text_followBy_label"
        app:layout_constraintTop_toTopOf="@+id/profile_text_follows_value" />

    <ImageView
        android:id="@+id/profile_divider_2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:layout_marginStart="@dimen/vertical_margin"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_imageView"
        app:srcCompat="@color/colorGreyLight" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_media_recycleView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/short_margin"
        android:layout_marginEnd="@dimen/short_margin"
        android:layout_marginStart="@dimen/short_margin"
        android:layout_marginTop="@dimen/short_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_divider_2" />

</android.support.constraint.ConstraintLayout>